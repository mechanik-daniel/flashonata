{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Debug with Inspector",
      "type": "shell",
      "command": "node",
      "args": [
        "--inspect-brk=9229",
        "test/debug.js"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Run Debug Script",
      "type": "shell",
      "command": "npm",
      "args": ["run", "debug"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    }
  ]
}
